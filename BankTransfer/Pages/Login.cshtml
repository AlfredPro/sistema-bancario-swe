@page
@model BankTransfer.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 container border" style="padding:20px">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserData.Username" class="control-label"></label>
                </div>

                <div class="col-5">
                    <input asp-for="UserData.Username" class="form-control" />
                </div>
                <span asp-validation-for="UserData.Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                        <label asp-for="UserData.Password" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserData.Password" class="form-control" />
                </div>
                <span asp-validation-for="UserData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-2">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
